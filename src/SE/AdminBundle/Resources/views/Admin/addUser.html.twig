{% extends "SEAdminBundle::layout.html.twig" %}

{% block title %}
  New user - {{ parent() }}
{% endblock %}

{% block seadmin_header %}
  <header class="h-sap">
  	<div class="line"></div>
  	<h2><i class="glyphicon glyphicon-group"></i> Create new user</h2>
  </header>
{% endblock %}

{% block seadmin_body %}
<form style="color: black;" method="POST">
{{ form_start(form) }}
	{{ form_errors(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}
    {{ form_row(form.team) }}
    {{ form_row(form.roles) }}
    <button type="submit" class="btn btn-primary">Add</button>
{{ form_end(form) }}
</form>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
{% endblock %}