{% extends "SEReportBundle::layout.html.twig" %}

{% block title %}Productivity - {{ parent() }}{% endblock %}

{% block sereport_body %}
  <header class="h-sap">
    <div class="line"></div>
    <div class="pull-left">
      <h2><i class="glyphicon glyphicon-stats"> </i> Productivity report</h2>
    </div>
  </header>

  <div class="row">
    <div id="filters">
        <div id="1" class="teams pull-left">
          <a id="allT" class="label label-primary">HubAsia</a>
          <a id="Outbound4" class="label label-default">Outbound4</a>
          <a id="Inbound4" class="label label-default">Inbound4</a>
          <a id="Outbound3" class="label label-default">Outbound3</a>
          <a id="Inbound3" class="label label-default">Inbound3</a>
          <a id="Releasing" class="label label-default">Releasing</a>
          <a id="Adaptation" class="label label-default">Adaptation</a>
          <a id="Taskforce" class="label label-default">Taskforce</a>
        </div>
        <div id="2" class="shifts hide">
          | 
          <a id="allS" class="label label-primary">All</a>
          <a id="Shift1" class="label label-default">Shift1</a>
          <a id="Shift2" class="label label-default">Shift2</a>
          <a id="Shift3" class="label label-default">Shift3</a>
        </div>
      </div>
    </div>

  <div class="row">
    <div class="col-md-12">
      <h4 id="yesterday">YESTERDAY : </h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
        <div id="container-prod" style="height: 300px; margin:auto auto;"></div>
    </div>
    <div id="yesterday-panel" class="col-md-4 col-md-offset-1">
       <div class="panel panel-default">
        <div class="panel-body">
          <h4>Transfer order lines : 
            <span id="y-to"></span>
          </h4>
          <h4>Total Included Manhours : 
            <span id="y-wh"></span>
          </h4>
          <h4>Total Manhours : 
            <span id="y-ma"></span>
          </h4>
          <h4>Total Headcount : 
            <span id="y-hc"></span>
          </h4>
          <h4>Overtime hours :
            <span id="y-ot"></span>
          </h4>
          <h4>Manual TO Lines :
            <span id="y-mto"></span>
          </h4>
          <h4>Training hours :
            <span id="y-tr"></span>
          </h4>
          <h4>Absent employees :
            <span id="y-ab"></span>
          </h4>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h4>MONTHLY</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
        <div id="container-daily" style="height: 500px; margin:auto auto;"></div>
    </div>
    <div id="daily-panel" class="col-md-3">
       <div class="panel panel-default">
        <div class="panel-body">
          <h3>Monthly Productivity : 
            <span id="m-prod"></span>
          </h3>
          <h4>Transfer order lines : 
            <span id="m-to"></span>
          </h4>
          <h4>Total Included Manhours : 
            <span id="m-wh"></span>
          </h4>
          <h4>Total Manhours : 
            <span id="m-ma"></span>
          </h4>
          <h4>Total Headcount : 
            <span id="m-hc"></span>
          </h4>
          <h4>Overtime hours :
            <span id="m-ot"></span>
          </h4>
          <h4>Manual TO Lines :
            <span id="m-mto"></span>
          </h4>
          <h4>Training hours :
            <span id="m-tr"></span>
          </h4>
          <h4>Absent employees :
            <span id="m-ab"></span>
          </h4>
        </div>
    </div>
  </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <script type="text/javascript">
   {% autoescape false %}
      var jsonTotalData = {{ jsonTotalData }};
    {% endautoescape %}
  </script>

  {% javascripts '@SEReportBundle/Resources/public/js/report.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}

{% endblock %}