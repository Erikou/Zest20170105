{% extends "SEReportBundle::layout.html.twig" %}

{% block title %}Attendance - {{ parent() }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets '@SEReportBundle/Resources/public/css/hr.css' %}
    <link rel="stylesheet" type="text/css" charset="UTF-8" media="all" href="{{ asset_url }}"/>
  {% endstylesheets %}
{% endblock %}

{% block sereport_body %}
  <header class="h-employee">
    <div class="line"></div>
    <div class="pull-left">
      <h2><i class="glyphicon glyphicon-user"> </i> Attendance report</h2>
    </div>
  </header>

  <div class="row">
    <div id="filters">
      <div class="month pull-left">
        <form name="test">
          <input type="text" id="monthpicker">
        </form>
      </div>
      <div class="teams pull-left">
        <a id="allT" class="label label-primary">HubAsia</a>
        <a id="Outbound4" class="label label-default">Outbound4</a>
        <a id="Inbound4" class="label label-default">Inbound4</a>
        <a id="Outbound3" class="label label-default">Outbound3</a>
        <a id="Inbound3" class="label label-default">Inbound3</a>
      </div>
      <div class="shifts hide">
        | 
        <a id="allS" class="label label-primary">All</a>
        <a id="Shift1" class="label label-default">Shift1</a>
        <a id="Shift2" class="label label-default">Shift2</a>
        <a id="Shift3" class="label label-default">Shift3</a>
      </div>
    </div>
  </div>

  <div class="row" id="data-panel">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Data Summary</h4>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-6">
              <div id="container-attendance" style="height: 300px; margin:auto auto;"></div>
            </div>
            <div id="summary-panel" class="col-md-4 col-md-offset-1">
              <div class="panel panel-default">
                <div class="panel-body">
                  <h5>Monthly rate : 
                    <span id="d-mr"></span>
                  </h5>
                  <h5>Total headcount : 
                   <span id="d-hc"></span>
                  </h5>
                  <h5>Total Hours : 
                    <span id="d-hr"></span>
                  </h5>
                  <h5>Total Overtime hours :
                    <span id="d-ot"></span>
                  </h5>
                  <h5>Total Normal Overtime hours :
                    <span id="d-otn"></span>
                  </h5>
                  <h5>Total Public Holidays Overtime Hours :
                   <span id="d-phot"></span>
                  </h5>
                  <h5>Number of > 12 consecutive workdays :
                   <span id="d-12"></span>
                  </h5>
                  <h5>Theoric Missing Regular Hours :
                   <span id="d-mhr"></span>
                  </h5>
                  <h5>Theoric Missing Employee input :
                   <span id="d-mhc"></span>
                  </h5>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div id="container-ot" style="height: 300px; margin:auto auto;"></div>
            </div>
            <div class="col-md-6">
              <div id="container-top-ot" style="height: 300px; margin:auto auto;"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Monthly Attendance by Employee</h4>
        </div>
        <div class="panel-body">
          <div class="col-md-12">
            <!-- Table -->
            <div class="table-responsive">
              <table id="table" class="table table-hover table-striped display">
                <thead>
                  <tr>
                    <th>Employees</th>
                    {% for day in calendar %}
                      {% if day.isHoliday == 1 %}
                        <th class="holiday">
                          {{ day.d }}/{{ day.m }}
                        </th>
                      {% elseif day.isWeekday == 0 %}
                        <th class="weekend">
                          {{ day.d }}/{{ day.m }}
                        </th>
                      {% else %}
                        <th>
                          {{ day.d }}/{{ day.m }}
                        </th>
                      {% endif %}
                    {% endfor %}
                  </tr>
                </thead>
                <tbody>
                  {% for employee in employees %}
                    <tr id="{{ employee.id }}">
                      <td>{{ employee.name }} | {{ employee.sesa }}</td>
                    </tr>
                  {% endfor %}                
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.js"></script>
  <script type="text/javascript">
   {% autoescape false %}
      var ajaxAttendance = '{{path('se_report_attendance')}}';
   {% endautoescape %}
  </script>
  {% javascripts '@SEReportBundle/Resources/public/js/hr/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}