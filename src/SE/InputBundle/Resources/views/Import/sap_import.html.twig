{% extends "SEInputBundle::layout.html.twig" %}

{% block title %}
  SAP Import - {{ parent() }}
{% endblock %}

{% block seinput_body %}
	<h2>SAP Import</h2>

	<div class="table-responsive">
		<table class="table table-hover table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th>Warehouse Nb</th>
					<th>Transfer Order Nb</th>
					<th>Material Nb</th>
					<th>Plant</th>
					<th>Date of confirmation</th>
					<th>Time of confirmation</th>
					<th>User SESA</th>
					<th>Source Storage Type</th>
				</tr>
			</thead>
			<tbody>
				{% for to_line in listImport %}
		      		<tr>
		      			<td>{{ to_line.id }}</td>
		      			<td>{{ to_line.warehouse }}</td>
		      			<td>{{ to_line.material }}</td>
		      			<td>{{ to_line.plant }}</td>
		      			<td>{{ to_line.dateConfirmation }}</td>
		      			<td>{{ to_line.timeConfirmation }}</td>
		      			<td>{{ to_line.user }}</td>
		      			<td>{{ to_line.sourceStorageType }}</td>
					</tr>
		    {% else %}
		      <tr><td> No line recorded </td></tr>
		    {% endfor %}
		  </tbody>
		</table>
	</div>

{% endblock %}