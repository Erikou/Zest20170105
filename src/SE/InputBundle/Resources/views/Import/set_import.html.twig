{% extends "SEInputBundle::layout.html.twig" %}

{% block title %}
  SAP Import Settings- {{ parent() }}
{% endblock %}

{% block seinput_body %}

	<div class="well col-md-7">
		<h3>New SAP Import</h3>

		<form class="form-inline" method="post" action="http://localhost/SE/Import/Import.php"> 
   			<div class="form-group">
			    <label for="dateinput">Date of confirmation : </label>
			    <div class="input-group">
			    	<input type="date" class="form-control" id="dateinput" value="{{ 'now'|date('d/m/Y') }}" name="date">
				    <span class="input-group-addon">
	          			<span id="overtime" class="glyphicon glyphicon-time"></span>
			        </span>
			    </div>
			</div>
			<button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-download"></i> Import</button>
		</form>
	</div>

{% endblock %}