{% extends "SEReportBundle::layout.html.twig" %}

{% block title %}Productivity - {{ parent() }}{% endblock %}

{% block sereport_body %}
  <header class="h-sap">
    <div class="line"></div>
    <h2><i class="glyphicon glyphicon-stats"> </i> Productivity report</h2>
  </header>

  <div class="col-md-3 well">
  	{% for sap in sapToProcess %}
  		{{ sap.date|date("m/d/Y") }}  - {{ sap.inputs }} - {{ sap.process }}
  		<br>
    {% endfor %}
  </div>	

  <div class="col-md-3 well">
  	{% for input in inputToProcess %}
  		{{ input.dateInput|date("m/d/Y") }}  - {{ input.team }} - {{ input.shift }}
  		<br>
    {% endfor %}
  </div>	

   <div class="col-md-3 well">
  	{% for incomplete in incompleteImports %}
  		{{ incomplete.date|date("m/d/Y") }}  - {{ incomplete.inputs }} - {{ incomplete.process }}
  		<br>
    {% endfor %}
  </div>


{% endblock %}