{% extends "SEInputBundle::layout.html.twig" %}

{% block title %}
  SAP Import - {{ parent() }}
{% endblock %}

{% block seinput_body %}
	<h2>SAP Import</h2>

	<div class="table-responsive">
		<table class="table table-hover table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th>Warehouse Nb</th>
					<th>Transfer Order Nb</th>
					<th>Material Nb</th>
					<th>Plant</th>
					<th>Date of confirmation</th>
					<th>Time of confirmation</th>
					<th>User SESA</th>
					<th>Source Storage Type</th>
				</tr>
			</thead>
			<tbody>
				{% for to_line in list_import %}
		      		<tr>
		      			<td>{{ to_line.id }}</td>
		      			<td>{{ to_line.name }}</td>
		      			<td>{% if not to_line.teams.empty %}
		        				{% for team in activity.teams %}
					    			{{ team.name }} 
					      		{% endfor %}
							{% endif %}
		      			</td>
		      			<td>{% if not activity.activityZones.empty %}
		        				{% for activityZones in activity.activityZones %}
					    			{{ activityZones.zone.name }} 
					      		{% endfor %}
							{% endif %}
		      			</td>
		      			<td>{% if not activity.workstations.empty %}
		        				{% for workstation in activity.workstations %}
					    			{{ workstation.name }} 
					      		{% endfor %}
							{% endif %}
		      			</td>
		      			<td>{% if activity.defaultTarget is not null %}
    							default : {{ activity.defaultTarget }}
    						{% endif %}
    						{% if not activity.activityZones.empty %}
		      					zones :
			        			{% for activityZones in activity.activityZones %}
			        				{% if activityZones.target is defined %}
        								{{ activityZones.target }}
        							{% endif %}
			        			{% endfor %}	
			        		{% endif %}
			        		{% if not activity.workstations.empty %}
			        			workstations :
			        			{% for workstation in activity.workstations %}
			        				{% if workstation.target is defined %}
        								{{ workstation.target }}
        							{% endif %}
			        			{% endfor %}	
			        		{% endif %}
		      			</td>
					</tr>
		    {% else %}
		      <tr><td> No activity recorded </td></tr>
		    {% endfor %}
		  </tbody>
		</table>
	</div>

{% endblock %}