{% extends "::layout.html.twig" %}

{% block title %}Login to Zest{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" charset="UTF-8" media="all" href="{{ asset('bundles/seinput/css/login/login.css') }}"/>
{% endblock %}

{% block logo %}
    <li class="logo-zest"><img alt="Zest" src="{{ asset('bundles/sereport/images/zest.png') }}"></li>
{% endblock %}

{% block body %}
    <form action="{{ path('login_check') }}" method="post">
		<img alt="Zest" src="{{ asset('bundles/sereport/images/zest.png') }}" style="width: 80%;"><br/>
        <div class="field">
            <label for="username">Username:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>
        <div class="field">
            <label for="password">Password:</label>
            <input type="password" id="password" name="_password" />
        </div>
        <div class="form-button">
            <button class="btn btn-success" type="submit">login</button>
        </div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
        <input type="hidden" name="_target_path" value="/" />
    </form>
{% endblock %}