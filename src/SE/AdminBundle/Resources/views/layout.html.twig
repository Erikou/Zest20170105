{% extends "::layout.html.twig" %}

{% block title %}
  Admin - {{ parent() }}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/s/bs/jszip-2.5.0,pdfmake-0.1.18,dt-1.10.10,b-1.1.0,b-html5-1.1.0,b-print-1.1.0/datatables.min.css"/>
  {% stylesheets 'bundles/seadmin/css/*' %}
    <link rel="stylesheet" type="text/css" charset="UTF-8" media="all" href="{{ asset_url }}"/>
  {% endstylesheets %}
{% endblock %}

{% block menu %}
	{{ render(controller("SEAdminBundle:Admin:menu")) }}
{% endblock %}

{% block body %}

  <div class="header-block">
    {% block seadmin_header %}
    {% endblock %}
  </div>

  {% block seadmin_body %}
  {% endblock %}

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/s/bs/jszip-2.5.0,pdfmake-0.1.18,dt-1.10.10,b-1.1.0,b-html5-1.1.0,b-print-1.1.0/datatables.min.js"></script>
  <script src="http://code.highcharts.com/highcharts.js"></script>
  <script src="http://code.highcharts.com/highcharts-more.js"></script>
  <script src="http://code.highcharts.com/modules/solid-gauge.js"></script>
  {% javascripts '@SEAdminBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}

  <script type="text/javascript">
    $(document).ready(function() {
      $('.logo-zest img').attr('src','{{ asset('bundles/seadmin/images/logo-white.png') }}');
      $('#gn-menu .logo-zest').append("<i class='glyphicon glyphicon-lock lock-zest'></i>")
    });
  </script>

{% endblock %}