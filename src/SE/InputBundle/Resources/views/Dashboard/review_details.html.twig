{% extends "SEInputBundle::layout.html.twig" %}

{% block title %}Review input details - {{ parent() }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/s/bs/jszip-2.5.0,pdfmake-0.1.18,dt-1.10.10,b-1.1.0,b-html5-1.1.0,b-print-1.1.0/datatables.min.css"/>
{% endblock %}

{% block seinput_header %}
  <header class="h-review">
    <div class="line"></div>
    <h2><i class="glyphicon glyphicon-dashboard"> </i> Input details : {{ input.team.name }} - shift {{ input.shift.id }}, on {{ input.dateInput|date('d-m-Y') }}</h2>
  </header>
{% endblock %}

{% block seinput_body %}
  <div class="row">
    <div class="col-md-5">
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
          <h4>Informations</h4>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-hover table-striped display">
              <tbody>
                <tr>
                  <td><strong>Input processed by</strong></td>
                  <td class="text-right"><strong>{{ input.user.name }}</strong></td>
                  <td></td><td></td>
                </tr>
                <tr>
                  <td><strong>Productivity</strong></td>
                  <td class="text-right"><strong>{{ input.totalProdInput }}</strong></td>
                  <td></td><td></td>
                </tr>
                <tr>
                  <td><strong>Headcount</strong></td>
                  <td class="text-right">{{ input.inputEntries|length }}</td>
                  <td><strong>Absences</strong></td>
                  <td class="text-right">{{ input.totalAbsence }}</td>
                </tr>
                <tr>
                  <td><strong>TO lines</strong></td>
                  <td class="text-right">{{ input.totalToInput }}</td>
                  <td><strong>Manual TO lines</strong></td>
                  <td class="text-right">{{ input.manualTo }}</td>
                </tr>
                <tr>
                  <td><strong>Total Hours</strong></td>
                  <td class="text-right">{{ input.totalHoursInput }}</td>
                  <td><strong>Included Hours</strong></td>
                  <td class="text-right">{{ input.totalWorkingHoursInput }}</td>
                </tr>
                <tr>
                  <td><strong>Overtime</strong></td>
                  <td class="text-right">
                    {{ input.totalOvertimeInput }}
                    {% if input.totalOvertimeInput != 0 %}
                      <br><strong>{{ input.otStartTime|date('H:i') }}</strong> to <strong>{{ input.otEndTime|date('H:i') }}</strong>
                    {% else %}
                      (no overtime recorded)
                    {% endif %}
                  </td>
                  <td><strong>Training</strong></td>
                  <td class="text-right">{{ input.totalTrainingHours }}</td>
                </tr>   
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-md-offset-1">
      <div id="container-activities" style="min-width: 310px; height: 300px; margin: 0 auto"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div id="input-details" class="panel panel-default">
        <div class="panel-heading">
          <h4>Input Details</h4>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
              <table id="table" class="table table-hover table-striped display">
                <thead>
                  <tr>
                    <th>Employee</th>
                    <th>SESA</th>
                    <th>Present</th>
                    <th>Activities</th>
                    <th>Regular Hours</th>
                    <th>Overtime</th>
                    <th>Comments</th>
                    <th>TO lines</th>
                    <th>Total Hours</th>
                    <th>Productivity</th>
                    <th>
                      <div class="btn btn-success" data-toggle="modal" data-target="#formModal" data-type="@new"><i class="glyphicon glyphicon-plus"> </i> Add New</div>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  {% for entry in input.inputEntries %}
                    <tr>
                      <td>{{ entry.employee.name }}</td>
                      <td>{{ entry.sesa }}</td>
                      <td>{% if entry.present == 1 %}
                            <i class="glyphicon glyphicon-ok text-success"></i></td>
                          {% else %}
                            <i class="glyphicon glyphicon-remove text-warning"> </i> {{ entry.absencereason.name }}</td>
                          {% endif %}
                      <td>
                        {% for a in entry.activityHours %}
                          {{ a.activity.name }} </br>
                        {% endfor %}
                      </td>
                      <td>
                        {% for a in entry.activityHours %}
                          {{ a.regularHours }} </br>
                        {% endfor %}
                      </td>
                      <td>
                        {% for a in entry.activityHours %}
                          {{ a.otHours }} </br>
                        {% endfor %}
                      </td>
                      <td>{{ entry.comments }}</td>
                      <td>{{ entry.totalTo }}</td> 
                      <td>{{ entry.totalHours }}</td>
                      <td>
                        {% if entry.totalProd != 0 %}
                          {{ entry.totalProd }}
                        {% endif %}
                      </td>
                      <td>
                        <i class="fa fa-edit"> </i> <i class="fa fa-trash text-warning"> </i></div>
                      </td>
                    </tr>
                  {% endfor %}               
                </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="infoModalLabel">New Entry</h4>
        </div>
        <div class="modal-body">

          <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Missing Employee ?</strong><br>You can add his details here and validate.<br>It will be added to the input after review. Productivity will be recalculated.
          </div>

          {{ include("SEInputBundle:Dashboard:entry_form.html.twig") }}

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="saver btn btn-success pull-right"><i class="glyphicon glyphicon-send"> </i> Submit</button>
        </div>
      </div>
    </div>
  </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript">
    var id = {{ input.id }};
    var ajaxActivities = '{{path('se_input_review_activities')}}';
    var ajaxFormNew = '{{path('se_input_review_edit_new')}}';
    var ajaxFormEdit = '{{path('se_input_review_edit_modify')}}';
  </script>
  {% javascripts '@SEInputBundle/Resources/public/js/details/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}